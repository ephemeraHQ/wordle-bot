{
  "name": "wordle-bot",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w & sleep 1 && nodemon --quiet dist/index.js",
    "dev:bun": "tsc -w & sleep 1 && bun run --watch dist/index.js",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "@redis/client": "^1.6.0",
    "@xmtp/message-kit": "^1.0.0-beta.6",
    "ethers": "^5.7.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.1.3",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20"
  }
}
